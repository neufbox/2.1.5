+
+  pthread_mutex_lock (&ufam->startstop_lock);
+  ufam->stop = true;
+  pthread_cond_wait (&ufam->stop_cond, &ufam->startstop_lock);
+
+  pthread_join (ufam->thread, NULL);
+
+  pthread_mutex_unlock (&ufam->startstop_lock);
