+
+  pthread_mutex_init (&ufam->startstop_lock, NULL);
+  pthread_cond_init (&ufam->stop_cond, NULL);
+  pthread_mutex_init (&ufam->add_monitor_lock, NULL);
+  ufam->stop = false;
+
+  pthread_mutex_lock (&ufam->startstop_lock);
+
+  if ((FAMOpen2(&ufam->fc,"ushare")) < 0)
